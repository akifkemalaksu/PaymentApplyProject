@using PaymentApplyProject.Application.Dtos
@using PaymentApplyProject.Application.Features.KullaniciFeatures.GetUserByIdAndRole
@model Response<GetUserByIdAndRoleResult>

@if (!Model.IsSuccessful)
{
    <div class="alert alert-danger" role="alert">
        <div class="alert-icon"><i class="flaticon-warning"></i></div>
        <div class="alert-text">
            <h4 class="alert-heading">Uyarı!</h4>
            <p>@Model.Message</p>
        </div>
    </div>
}
else
{
    <form asp-action="edituser" class="kt-form" id="kt_form">
        <input type="hidden" asp-for="Data.Id" name="Id">
        <div class="kt-portlet__body">
            <div class="form-group">
                <label>Kullanıcı Adı:</label>
                <input type="text" class="form-control" asp-for="Data.KullaniciAdi" name="KullaniciAdi" value="@Model.Data.KullaniciAdi">
            </div>
            <div class="form-group">
                <label>Email:</label>
                <input type="email" class="form-control" asp-for="Data.Email" name="Email" value="@Model.Data.Email">
            </div>
            <div class="form-group">
                <label>Ad:</label>
                <input type="text" class="form-control" asp-for="Data.Ad" name="Ad" value="@Model.Data.Ad">
            </div>
            <div class="form-group">
                <label>Soyad:</label>
                <input type="text" class="form-control" asp-for="Data.Soyad" name="Soyad" value="@Model.Data.Soyad">
            </div>
            <div class="form-group">
                <label>Firmalar:</label>
                <select class="form-control" asp-for="Data.Firmalar" name="Firmalar" multiple>
                    @foreach (var firma in Model.Data.Firmalar)
                    {
                        <option value="@firma.Id" selected>@firma.Ad</option>
                    }
                </select>
            </div>
            <div class="form-group row">
                <label class="col-12">Aktif:</label>
                <span class="kt-switch kt-switch--lg kt-switch--icon kt-switch--primary col-12">
                    <label>
                        <input type="checkbox" class="form-control" asp-for="Data.AktifMi" name="AktifMi" checked="@Model.Data.AktifMi">
                        <span></span>
                    </label>
                </span>
            </div>
        </div>
    </form>
}
