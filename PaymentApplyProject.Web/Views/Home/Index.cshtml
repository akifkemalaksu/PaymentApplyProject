                        <h3 class="kt-portlet__head-title">
                            GÜNLÜK Para Yatırma İşlemleri
                        </h3>
                    </div>
                </div>
                <div class="kt-portlet__body">
                    <div class="kt-widget25">
                        <span class="kt-widget25__stats m-font-brand">@getMainReportsResult.DailyReport.DepositAmounts.ToString("c")</span>
                        <div class="kt-widget25__items row">
                            <div class="kt-widget25__item col-sm-12 col-md-4">
                                <span class="kt-widget25__number">
                                    @getMainReportsResult.DailyReport.PendingDepositPercent%
                                </span>
                                <div class="progress m-progress--sm">
                                    <div class="progress-bar kt-bg-warning" role="progressbar" style="width: @(getMainReportsResult.DailyReport.PendingDepositPercent)%;" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                                <span class="kt-widget25__desc">
                                    Bekleyenler
