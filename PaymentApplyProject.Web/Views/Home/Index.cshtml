@using PaymentApplyProject.Application.Dtos.ResponseDtos
@using PaymentApplyProject.Application.Features.ReportsFeatures.GetMainReports

@{
    ViewData["Title"] = "Ana Sayfa";

    GetMainReportsResult getMainReportsResult = Model.Data;
}

@model Response<GetMainReportsResult>

<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-container  kt-container--fluid ">
        <div class="kt-subheader__main">
            <h3 class="kt-subheader__title">
                @ViewData["Title"]
            </h3>
        </div>
        <div class="kt-subheader__toolbar">
            <div class="kt-subheader__wrapper">
                <div class="dropdown dropdown-inline" data-toggle="kt-tooltip" title="" data-placement="left" data-original-title="Quick actions">
                    <a href="#" class="btn btn-icon" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
