@using PaymentApplyProject.Application.Dtos
@using PaymentApplyProject.Domain.Constants
@using PaymentApplyProject.Application.Features.WithdrawFeatures.GetWithdrawById
@model Response<GetWithdrawByIdResult>

<div class="row">
    @if (!Model.IsSuccessful)
    {
        <div class="col-12">
            <div class="alert alert-danger" role="alert">
                <div class="alert-icon"><i class="flaticon-warning"></i></div>
                <div class="alert-text">
                    <h4 class="alert-heading">Uyarı!</h4>
                    <p>@Model.Message</p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="col-lg-6 col-md-12">
            <div class="d-flex align-items-center justify-content-between mb-2">
                <h3 class="display-6">Müşteri Bilgileri</h3>
            </div>
            <div class="d-flex align-items-center justify-content-between mb-2">
                <span class="font-weight-bold mr-2">Kullanıcı Adı:</span>
                <span class="text-muted">@Model.Data.Username</span>
            </div>
            <div class="d-flex align-items-center justify-content-between mb-2">
                <span class="font-weight-bold mr-2">Ad:</span>
                <span class="text-muted">@Model.Data.Name</span>
            </div>
            <div class="d-flex align-items-center justify-content-between mb-2">
                <span class="font-weight-bold mr-2">Soyad:</span>
                <span class="text-muted">@Model.Data.Surname</span>
            </div>
            <div class="d-flex align-items-center justify-content-between mb-2">
                <span class="font-weight-bold mr-2">Hesap No:</span>
                <span class="text-muted">@Model.Data.AccountNumber</span>
            </div>
            <div class="d-flex align-items-center justify-content-between mb-2">
                <span class="font-weight-bold mr-2">Firma:</span>
                <span class="text-muted">@Model.Data.Company</span>
            </div>
        </div>

        <div class="col-lg-6 col-md-12">
            <div class="d-flex align-items-center justify-content-between mb-2">
                <h3 class="display-6">Para Yatırma İşlem Bilgileri</h3>
            </div>

            <div class="d-flex align-items-center justify-content-between mb-2">
                <span class="font-weight-bold mr-2">Durum:</span>
                @if (Model.Data.StatusId == WithdrawStatusConstants.BEKLIYOR)
                {
                    <span class="kt-badge kt-badge--inline kt-badge--warning">Bekliyor</span>
                }
                else if (Model.Data.StatusId == WithdrawStatusConstants.REDDEDILDI)
                {
                    <span class="kt-badge kt-badge--inline kt-badge--danger">Reddedildi</span>
                }
                else if (Model.Data.StatusId == WithdrawStatusConstants.ONAYLANDI)
                {
                    <span class="kt-badge kt-badge--inline kt-badge--success">Onaylandı</span>
                }
            </div>
            <div class="d-flex align-items-center justify-content-between mb-2">
                <span class="font-weight-bold mr-2">Tutar:</span>
                <span class="text-muted">@Model.Data.Amount.ToString("c")</span>
            </div>
            @if (Model.Data.TransactionDate != null)
            {
                if (Model.Data.StatusId == WithdrawStatusConstants.REDDEDILDI)
                {
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <span class="font-weight-bold mr-2">Reddetme Tarihi:</span>
                        <span class="text-muted">@Model.Data.TransactionDate.Value.ToString("dd.MM.yy")</span>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <span class="font-weight-bold mr-2">Reddetme Saati:</span>
                        <span class="text-muted">@Model.Data.TransactionDate.Value.ToString("hh.mm")</span>
                    </div>
                }
                else if (Model.Data.ApprovedAmount.HasValue)
                {
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <span class="font-weight-bold mr-2">Onaylanan Tutar:</span>
                        <span class="text-muted">@Model.Data.ApprovedAmount.Value.ToString("c")</span>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <span class="font-weight-bold mr-2">Onaylanma Tarihi:</span>
                        <span class="text-muted">@Model.Data.TransactionDate.Value.ToString("dd.MM.yy")</span>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mb-2">
                        <span class="font-weight-bold mr-2">Onaylanma Saati:</span>
                        <span class="text-muted">@Model.Data.TransactionDate.Value.ToString("hh.mm")</span>
                    </div>
                }
            }
            <div class="d-flex align-items-center justify-content-between mb-2">
                <span class="font-weight-bold mr-2">Talep Tarihi:</span>
                <span class="text-muted">@Model.Data.AddDate.ToString("dd.MM.yy")</span>
            </div>
            <div class="d-flex align-items-center justify-content-between mb-2">
                <span class="font-weight-bold mr-2">Talep Saati:</span>
                <span class="text-muted">@Model.Data.AddDate.ToString("hh.mm")</span>
            </div>
        </div>

        if (Model.Data.StatusId == WithdrawStatusConstants.BEKLIYOR)
        {
            <div class="col-12">
                <div class="kt-separator kt-separator--md kt-separator--dashed"></div>
            </div>
            <div class="col-lg-6 col-md-12">
                <div class="d-flex align-items-center justify-content-between mb-2">
                    <h3 class="display-6">Onaylama Reddetme İşlemi</h3>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <label class="font-weight-bold">Onaylanacak Tutar</label>
                        <input class="form-control" id="approvedAmount" name="approvedAmount" value="@Model.Data.Amount.ToString("0")" type="text">
                        <input id="id" name="id" type="hidden" value="@Model.Data.Id">
                    </div>
                </div>
                <div class="col-12 kt-align-right">
                    <button type="button" id="onayla" class="btn btn-success">Onayla</button>
                    <button type="button" id="reddet" class="btn btn-danger">Reddet</button>
                </div>
            </div>
        }
    }
</div>
<script src="~/assets/plugins/jquery-maskmoney/dist/jquery.maskMoney.min.js"></script>
