@using PaymentApplyProject.Domain.Constants

@{
    ViewData["Title"] = "Para Çekmeler";
}

@model IEnumerable<PaymentApplyProject.Application.Features.ParaCekmeFeatures.LoadWithdrawsForDatatable.LoadWithdrawsForDatatableResult>

<link href="~/assets/plugins/custom/datatables/datatables.bundle.css" rel="stylesheet" type="text/css" />

<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-container  kt-container--fluid ">
        <div class="kt-subheader__main">
            <h3 class="kt-subheader__title">
                @ViewData["Title"]
            </h3>
        </div>
        <div class="kt-subheader__toolbar">
            <div class="kt-subheader__wrapper">
                <div class="dropdown dropdown-inline" data-toggle="kt-tooltip" title="" data-placement="left" data-original-title="Quick actions">
                    <a href="#" class="btn btn-icon" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="kt-container kt-container--fluid  kt-grid__item kt-grid__item--fluid">

    <div class="kt-portlet kt-portlet--mobile">
        <div class="kt-portlet__head kt-portlet__head--lg">
            <div class="kt-portlet__head-label">
                <span class="kt-portlet__head-icon">
                    <i class="kt-font-brand fa fa-lira-sign"></i>
                </span>
                <h3 class="kt-portlet__head-title">
                    @ViewData["Title"]
                </h3>
            </div>
        </div>
        <div class="kt-portlet__body">
            <div class="row kt-margin-b-20">
                <div class="col-lg-4 kt-margin-b-10-tablet-and-mobile">
                    <label>Durum:</label>
                    <select name="durumId" id="durumId" class="form-control kt-input">
                        <option value="0">Hepsi</option>
                        <option selected value="@ParaCekmeDurumSabitler.BEKLIYOR">Bekliyor</option>
                        <option value="@ParaCekmeDurumSabitler.REDDEDILDI">Reddedildi</option>
                        <option value="@ParaCekmeDurumSabitler.ONAYLANDI">Onaylandı</option>
                    </select>
                </div>
                <div class="col-lg-4 kt-margin-b-10-tablet-and-mobile">
                    <label>Firma:</label>
                    <select name="firmaId" id="firmaId" class="form-control kt-input">
                    </select>
                </div>
                <div class="col-lg-4 kt-margin-b-10-tablet-and-mobile">
                    <label>Müşteri:</label>
                    <select name="musteriId" id="musteriId" class="form-control kt-input">
                    </select>
                </div>
            </div>
            <div class="kt-separator kt-separator--md kt-separator--dashed"></div>
            <div class="row">
                <div class="col-lg-12">
                    <button class="btn btn-primary btn-brand--icon" id="kt_search">
                        <span>
                            <i class="la la-search"></i>
                            <span>Filtrele</span>
                        </span>
                    </button>
                    <button class="btn btn-secondary btn-secondary--icon" id="kt_reset">
                        <span>
                            <i class="la la-close"></i>
                            <span>Reset</span>
                        </span>
                    </button>
                </div>
            </div>
            <div class="kt-separator kt-separator--border-dashed kt-separator--space-md"></div>
            <table class="table table-striped- table-bordered table-hover table-checkable dataTable no-footer dtr-inline" id="kt_table_1" role="grid" aria-describedby="kt_table_1_info" style="width: 1470px;">
                <thead>
                    <tr role="row">
                        <th>@Html.DisplayNameFor(x => x.Id)</th>
                        <th>@Html.DisplayNameFor(x => x.Firma)</th>
                        <th>@Html.DisplayNameFor(x => x.MusteriKullaniciAd)</th>
                        <th>@Html.DisplayNameFor(x => x.MusteriAdSoyad)</th>
                        <th>@Html.DisplayNameFor(x => x.BankaHesapNo)</th>
                        <th>@Html.DisplayNameFor(x => x.Durum)</th>
                        <th>@Html.DisplayNameFor(x => x.TalepTarihi)</th>
                        <th>@Html.DisplayNameFor(x => x.IslemTarihi)</th>
                        <th>@Html.DisplayNameFor(x => x.Tutar)</th>
                        <th>@Html.DisplayNameFor(x => x.OnaylananTutar)</th>
                        <th class="no-sort">İşlemler</th>
                    </tr>
                </thead>
            </table>
        </div>
    </div>
</div>
@section scripts{
    <script src="~/assets/plugins/custom/datatables/datatables.bundle.js" type="text/javascript"></script>
    <script src="~/js/datatableHelper.js" type="text/javascript"></script>
    <script src="~/js/pages/payment/withdraws.js" type="text/javascript"></script>
}