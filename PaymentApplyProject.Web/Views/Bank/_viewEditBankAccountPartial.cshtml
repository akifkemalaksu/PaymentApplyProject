@using PaymentApplyProject.Application.Dtos.ResponseDtos
@using PaymentApplyProject.Application.Features.BankAccountFeatures.GetBankAccountById
@model Response<GetBankAccountByIdResult>

@if (!Model.IsSuccessful)
{
    <div class="alert alert-danger" role="alert">
        <div class="alert-icon"><i class="flaticon-warning"></i></div>
        <div class="alert-text">
            <h4 class="alert-heading">Uyarı!</h4>
            <p>@Model.Message</p>
        </div>
    </div>
}
else
{
    <form asp-action="editbankaccount" class="kt-form" id="kt_form">
        <input type="hidden" asp-for="Data.Id" name="Id" />
        <div class="kt-portlet__body">
            <div class="form-group">
                <label>Banka:</label>
                <select class="form-control" asp-for="Data.BankId" name="BankId">
                    <option selected value="@Model.Data.BankId">@Model.Data.Bank</option>
                </select>
            </div>
            <div class="form-group">
                <label>Hesap Numarası:</label>
                <input type="text" class="form-control" asp-for="Data.AccountNumber" name="AccountNumber" value="@Model.Data.AccountNumber">
            </div>
            <div class="form-group">
                <label>Ad:</label>
                <input type="text" class="form-control" asp-for="Data.Name" name="Name" value="@Model.Data.Name">
            </div>
            <div class="form-group">
                <label>Soyad:</label>
                <input type="text" class="form-control" asp-for="Data.Surname" name="Surname" value="@Model.Data.Surname">
            </div>
            <div class="form-group">
                <label>Alt Limit:</label>
                <input type="text" class="form-control money" asp-for="Data.LowerLimit" name="LowerLimit" value="@Model.Data.LowerLimit">
            </div>
            <div class="form-group">
                <label>Üst Limit:</label>
                <input type="text" class="form-control money" asp-for="Data.UpperLimit" name="UpperLimit" value="@Model.Data.UpperLimit">
            </div>
            <div class="form-group row">
                <label class="col-12">Aktif:</label>
                <span class="kt-switch kt-switch--lg kt-switch--icon kt-switch--primary col-12">
                    <label>
                        <input type="checkbox" class="form-control" asp-for="Data.Active" name="Active" checked="@Model.Data.Active">
                        <span></span>
                    </label>
                </span>
            </div>
        </div>
    </form>
}

