@using PaymentApplyProject.Application.Features.BankaHesabiFeatures.AddBankAccount
@model AddBankAccountCommand

<form asp-action="addbankaccount" class="kt-form" id="kt_form">
    <div class="kt-portlet__body">
        <div class="form-group">
            <label>Banka:</label>
            <select class="form-control" asp-for="BankaId">
            </select>
        </div>
        <div class="form-group">
            <label>Hesap Numarası:</label>
            <input type="text" class="form-control" asp-for="HesapNumarasi">
        </div>
        <div class="form-group">
            <label>Ad:</label>
            <input type="text" class="form-control" asp-for="Ad">
        </div>
        <div class="form-group">
            <label>Soyad:</label>
            <input type="text" class="form-control" asp-for="Soyad">
        </div>
        <div class="form-group">
            <label>Alt Limit:</label>
            <input type="text" class="form-control money" asp-for="AltLimit">
        </div>
        <div class="form-group">
            <label>Üst Limit:</label>
            <input type="text" class="form-control money" asp-for="UstLimit">
        </div>
    </div>
</form>